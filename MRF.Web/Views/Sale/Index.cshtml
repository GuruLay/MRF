@model MRF.Web.ViewModels.SaleViewModels.SaleIndexViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="contentpanel">
    <div class="row pull-right">
        <div class="col-md-12">
            <a class="btn btn-primary">Add</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h5 class="subtitle mb5">Sale Records</h5>
            <p class="mb20">Show a Summary List of Sale Records</p>
            <div class="table-responsive">
                <table class="table table-striped mb30">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>DateTime</th>
                            <th>Customer Name</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var saleRecord in Model.SaleRecords)
                    {
                        <tr>
                            <td>@saleRecord.ProductName</td>
                            <td>@saleRecord.Quantity</td>
                            <td>@saleRecord.Price</td>
                            <td>@saleRecord.DateTime.ToString("d")</td>
                            <td>@saleRecord.CustomerName</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div><!-- table-responsive -->
        </div>
    </div>
</div>

