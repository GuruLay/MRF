@model MRF.Web.ViewModels.ProductionViewModels.ProductionIndexViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="contentpanel">
    <div class="row pull-right">
        <div class="col-md-12">
            <a class="btn btn-primary">Add</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h5 class="subtitle mb5">Productions</h5>
            <p class="mb20">Show a Summary List of Productions</p>
            <div class="table-responsive">
                <table class="table table-striped mb30">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Product Name</th>
                        <th>Status</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var production in Model.Productions)
                    {
                        <tr>
                            <td>@production.Name</td>
                            <td>@production.ProductName</td>
                            <td>@production.ProductStatus</td>
                            <td>@production.StartDate.ToString("d")</td>
                            <td>@production.EndDate.ToString("d")</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div><!-- table-responsive -->
        </div>
    </div>
</div>
